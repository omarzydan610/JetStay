# Docker Compose Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
DB_ROOT_PASSWORD=root
DB_NAME=jetstay
DB_USER=jetstay
DB_PASSWORD=jetstay123

# Spring Boot Configuration
SPRING_PROFILE=docker

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# JWT Configuration
JWT_AUTH_SECRET=your_jwt_auth_secret_key_minimum_256_bits
JWT_PASSWORD_RESET_SECRET=your_jwt_password_reset_secret_key

# Email Configuration (Brevo/SMTP)
MAIL_HOST=smtp-relay.brevo.com
MAIL_PORT=587
MAIL_USERNAME=your_brevo_email@smtp-brevo.com
MAIL_PASSWORD=your_brevo_smtp_password

# Perspective API Configuration
PERSPECTIVE_API_KEY=your_perspective_api_key

# Payment Service Configuration
PAYMENT_DB_URL=mysql+pymysql://root:root@db:3306/jetstay_payment
STRIPE_API_KEY=your_stripe_api_key
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# Frontend Configuration
REACT_APP_API_BASE_URL=http://localhost:8080
